            function GetMeasurements() {
    $.ajax({
        url: '@Url.Action("GetMeasurements", "Home")', // Assuming this URL returns the measurements (orders) data
        type: 'GET',
        dataType: 'json',
        success: function (data) {
            console.log('Received data:', data);
            if (Array.isArray(data)) {
                updateTable(data);
                updateTotalOrders(data); // Call function to update total orders
            } else {
                console.error('Data is not an array:', data);
                alert('Error: Received data is not an array.');
            }
        },
        error: function (xhr, status, error) {
            console.error('AJAX Error:', error);
            alert('Error: ' + error);
        }
    });
}

// Function to update the total number of orders dynamically
function updateTotalOrders(measurements) {
    const totalOrders = measurements.length; // Assuming each measurement is an order
    $('#total-orders').text(totalOrders); // Update the total orders count in the DOM
}

// Function to update the table with fetched measurements
function updateTable(measurements) {
    const tbody = $('.table tbody');
    tbody.empty(); // Clear existing rows

    // Add new rows to the table
    measurements.forEach(function (item, index) {
        const row = `
            <tr>
                <td>${index + 1}</td>
                <td>${item.FirstName}</td>
                <td>${item.LastName}</td>
                <td>${index || 0}</td>
                <td>${item.MeasurementDetails}</td>
                <td>${item.BillingDetails}</td>
                <td>${item.DateOfOrder}</td>
                <td>${item.ContactNumber}</td>
                <td>${item.Status || 'N/A'}</td>
            </tr>`;
        tbody.append(row);
    });
}



